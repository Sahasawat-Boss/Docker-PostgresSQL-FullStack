
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//User with id as int autoincrement, name as string and email as string
// Existing User model
model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String
  posts Post[]  // ðŸ”— One-to-many relationship (User â†’ Posts)
}

// New Post model
model Post {
  id        Int    @id @default(autoincrement())
  title     String
  content   String
  authorId  Int
  author    User   @relation(fields: [authorId], references: [id]) // Foreign key
}
